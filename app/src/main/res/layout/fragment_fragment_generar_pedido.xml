<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentGenerarPedido">

    <!-- TODO: Update blank fragment layout -->

    <!-- recycler de productos seleccionados-->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvProductos"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/llDetallePedido"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


    </androidx.recyclerview.widget.RecyclerView>

    <LinearLayout
        android:id="@+id/llDetallePedido"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="horizontal"
        android:padding="8dp"
        app:layout_constraintBottom_toTopOf="@+id/llFooter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/rvProductos">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="5">
            <LinearLayout
                android:id="@+id/llBotones"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <!-- BOTON Falta accion-->
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabBorrar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="@color/colorTextRojo"
                    app:maxImageSize="36dp"
                    app:srcCompat="@android:drawable/ic_menu_delete" />
                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/fabCalendario"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="bottom|end"
                    android:layout_margin="@dimen/fab_margin"
                    android:backgroundTint="@color/colorTextRojo"
                    app:maxImageSize="36dp"
                    app:srcCompat="@android:drawable/ic_menu_month" />


            </LinearLayout>




            <!-- FALTA EL SPINNER "TIPO DE PAGO"      esto se puede cambiar por radioGroup
             (contado รณ credito)-->
            <Spinner
                android:id="@+id/spTipoPago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                >

            </Spinner>
            <EditText
                android:id="@+id/editText"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:gravity="start|top"
                android:inputType="textMultiLine"
                android:layout_marginBottom="150dp"
                android:hint="observaciones del pedido o productos o quejas que tenga el cliente \no algo que se le ocurra al vendedor" />
        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_gravity="end"
            android:layout_weight="1">



            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etvDescuento"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="25dp"
                android:layout_weight=".7"
                app:helperText="Descuento">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#860101"
                    android:hint="S/. 0.00"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/etvAdelanto"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginTop="5dp"
                android:layout_weight=".7"
                app:helperText="S/. Adelanto">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#860101"
                    android:hint="S/. 0.00"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvSubtotal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                app:helperText="Sub Total">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#860101"
                    android:hint="S/. 0.00"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/tvTotal"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                app:helperText="Total">

                <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:backgroundTint="#860101"
                    android:hint="S/. 0.00"
                    android:inputType="numberDecimal" />
            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:id="@+id/llFooter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >
        <EditText
            android:id="@+id/tvFooterTotal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"

            android:ems="10"
            android:inputType="textPersonName"
            android:text="Total / IGV / tipo pedido / #Productos" />
        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/fabUploadPedido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|end"
            android:layout_margin="@dimen/fab_margin"
            android:backgroundTint="#4DB80A"
            app:maxImageSize="32dp"
            app:srcCompat="@android:drawable/ic_menu_upload" />
    </LinearLayout>

    <TextView
        android:id="@+id/txt_dni"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintBottom_toTopOf="@+id/llDetallePedido"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>