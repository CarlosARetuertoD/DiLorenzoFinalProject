<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PerfilActivity">
    <ImageView
        android:id="@+id/background_user_login"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/gradient_background"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorBackgroundLayout"
        android:gravity="center"
        android:orientation="vertical">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_foto_perfil"
            android:layout_width="170dp"
            android:layout_height="170dp"
            android:layout_marginTop="5dp"
            android:src="@drawable/ic_perfil"
            app:civ_border_color="@color/colorTextRojo"
            app:civ_border_width="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_nombres"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="10dp"
            android:hint="Nombres"
            android:textColorHint="#000"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/design_default_color_on_primary"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorIconos"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="#000"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
                app:layout_constraintStart_toStartOf="@+id/txt_contacto"
                app:layout_constraintTop_toBottomOf="@+id/txt_contacto" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_apellidos"
            android:layout_width="280dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:hint="Apellidos"
            android:textColorHint="#000"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/design_default_color_on_primary"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorIconos"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
                app:layout_constraintStart_toStartOf="@+id/txt_contacto"
                app:layout_constraintTop_toBottomOf="@+id/txt_contacto" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_dni"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:prefixText="N° "
            app:suffixText=" Dni"
            android:hint="N° Documento"
            android:textColorHint="#000"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/design_default_color_on_primary"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorIconos"
            app:helperText="documento de identidad"
            app:helperTextTextColor="#afafaf"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
                app:layout_constraintStart_toStartOf="@+id/txt_contacto"
                app:layout_constraintTop_toBottomOf="@+id/txt_contacto" />
        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_contrasenia"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:hint="Contraseña"
            android:textColorHint="#000"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/design_default_color_on_primary"
            app:boxStrokeWidth="2dp"
            app:counterEnabled="true"
            app:counterMaxLength="16"
            app:counterTextColor="@color/colorIconos"
            app:endIconMode="password_toggle"
            app:endIconTint="#000"
            app:helperText="al menos 8 caracteres"
            app:helperTextTextColor="#afafaf"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
                app:layout_constraintStart_toStartOf="@+id/txt_contacto"
                app:layout_constraintTop_toBottomOf="@+id/txt_contacto" />
        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/txt_contacto"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            app:prefixText="N° "
            android:hint="N° Contacto"
            android:textColorHint="#000"
            app:boxBackgroundColor="#fff"
            app:boxCornerRadiusBottomEnd="20dp"
            app:boxCornerRadiusBottomStart="20dp"
            app:boxCornerRadiusTopEnd="20dp"
            app:boxCornerRadiusTopStart="20dp"
            app:boxStrokeColor="@color/design_default_color_on_primary"
            app:boxStrokeWidth="2dp"
            app:endIconMode="clear_text"
            app:endIconTint="@color/colorIconos"
            app:hintEnabled="true"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense"
            >

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="number"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp"
                app:layout_constraintEnd_toEndOf="@+id/txt_contacto"
                app:layout_constraintStart_toStartOf="@+id/txt_contacto"
                app:layout_constraintTop_toBottomOf="@+id/txt_contacto" />
        </com.google.android.material.textfield.TextInputLayout>
    </LinearLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_close_session"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:clickable="true"
        android:backgroundTint="@color/colorPrimary"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/ic_close_session"
        app:backgroundTint="@color/colorTextRojo"
        app:borderWidth="4dp"

        style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton.Icon"/>


</androidx.constraintlayout.widget.ConstraintLayout>