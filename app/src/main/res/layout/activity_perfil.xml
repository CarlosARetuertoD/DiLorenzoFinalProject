<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activitys.PerfilActivity">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_foto_perfil"
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ic_perfil"
        app:civ_border_color="@color/colorTextRojo"
        app:civ_border_width="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_nombres"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Nombres"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/img_foto_perfil"
        app:layout_constraintStart_toStartOf="@+id/img_foto_perfil"
        app:layout_constraintTop_toBottomOf="@+id/img_foto_perfil" />

    <TextView
        android:id="@+id/txt_apellidos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Apellidos"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_nombres"
        app:layout_constraintStart_toStartOf="@+id/txt_nombres"
        app:layout_constraintTop_toBottomOf="@+id/txt_nombres" />

    <TextView
        android:id="@+id/txt_apellidos2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="DNI"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_apellidos"
        app:layout_constraintStart_toStartOf="@+id/txt_apellidos"
        app:layout_constraintTop_toBottomOf="@+id/txt_apellidos" />

    <TextView
        android:id="@+id/txt_apellidos3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Usuario"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_apellidos4"
        app:layout_constraintStart_toStartOf="@+id/txt_apellidos4"
        app:layout_constraintTop_toBottomOf="@+id/txt_apellidos4" />

    <TextView
        android:id="@+id/txt_apellidos5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="ContraseÃ±a"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_apellidos3"
        app:layout_constraintStart_toStartOf="@+id/txt_apellidos3"
        app:layout_constraintTop_toBottomOf="@+id/txt_apellidos3" />

    <TextView
        android:id="@+id/txt_apellidos4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="Contacto"
        android:textColor="@color/colorTextRojo"
        android:textSize="20dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/txt_apellidos2"
        app:layout_constraintStart_toStartOf="@+id/txt_apellidos2"
        app:layout_constraintTop_toBottomOf="@+id/txt_apellidos2" />


</androidx.constraintlayout.widget.ConstraintLayout>